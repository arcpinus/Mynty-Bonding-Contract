{
  "name": "erc1155",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "lint": "npx solhint contracts/*.sol && npx eslint . && npx markdownlint --ignore node_modules **/*.md",
    "format": "prettier --check \"contracts/**/*.sol\" \"**/*.ts\" \"**/*.md\" \"**/*.yml\"",
    "test": "npx hardhat test",
    "coverage": "npm run build && npx hardhat coverage --temp artifacts --network coverage",
    "deploy-mumbai": "npx hardhat run --network matic_mumbai scripts/deploy.js",
    "deploy-mainnet": "npx hardhat run --network matic_mainnet scripts/deploy.js",
    "flatten": "npx hardhat flatten contracts/WorkerMetaTransactions.sol > WMT_flat.sol && npx hardhat flatten contracts/bondingSale.sol > BS_flat.sol"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/test-helpers": "^0.5.11",
    "bip39": "^3.0.4",
    "bn.js": "^5.2.0",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eth-sig-util": "^3.0.1",
    "ethereum-waffle": "^3.2.1",
    "ethereumjs-util": "^7.0.10",
    "ethereumjs-wallet": "^1.0.1",
    "ethers": "^5.0.26",
    "hardhat": "^2.0.8",
    "hardhat-deploy": "^0.7.0-beta.44",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.3",
    "solidity-coverage": "^0.7.14"
  },
  "devDependencies": {
    "chai-bn": "^0.2.1",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "hardhat-contract-sizer": "^2.0.3",
    "markdownlint": "^0.22.0",
    "markdownlint-cli": "^0.26.0"
  }
}
